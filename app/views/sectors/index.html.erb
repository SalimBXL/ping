<p id="notice"><%= notice %></p>

<h1>Sectors</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sectors.each do |sector| %>
      <tr>
        <td><%= sector.name %></td>
        <td><%= sector.service.name %></td>
        <td>
          <%= link_to '<button type="button" class="btn btn-info btn-sm">
          <span class="material-icons">edit</span></button>'.html_safe,
          edit_sector_path(sector) %>

          <%= link_to '<button type="button" class="btn btn-danger btn-sm">
          <span class="material-icons">clear</span></button>'.html_safe,
          sector, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sector', new_sector_path, class: "btn btn-secondary btn-sm" %>
