<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Service</th>
      <th>Sector</th>
      <th>Name</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.sector.service.name %></td>
        <td><%= room.sector.name %></td>
        <td><%= room.name %></td>
        <td><%= room.number %></td>
        <td>
          <%= link_to '<button type="button" class="btn btn-info btn-sm">
          <span class="material-icons">edit</span></button>'.html_safe,
          edit_room_path(room) %>

          <%= link_to '<button type="button" class="btn btn-danger btn-sm">
          <span class="material-icons">clear</span></button>'.html_safe,
          room, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path, class: "btn btn-secondary btn-sm" %>
