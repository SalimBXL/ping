<p id="notice"><%= notice %></p>

<h1>Operating Systems</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operating_systems.each do |operating_system| %>
      <tr>
        <td><%= operating_system.name.titleize %></td>

        <td>
          <%= link_to '<button type="button" class="btn btn-info btn-sm">
          <span class="material-icons">edit</span></button>'.html_safe, 
          edit_operating_system_path(operating_system) %>
        
          <%= link_to '<button type="button" class="btn btn-danger btn-sm">
          <span class="material-icons">clear</span></button>'.html_safe, 
          operating_system, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Operating System', new_operating_system_path, class: "btn btn-secondary btn-sm" %>
